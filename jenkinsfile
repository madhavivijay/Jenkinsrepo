pipeline {
    agent none 
    stages {
        stage('Build') {
            agent any
            steps {
                git branch: 'main', url: 'https://github.com/jaintpharsha/devops-june-2022.git'
                sh '''
                    #!/bin/bash 
                    pwd 
                    ls
                    echo "This is a BUILD stage"
                    sleep 5
                '''  
            }
        }

        stage('DEPLOY') {
            agent { label 'javaproject1' } 
            steps {
                echo "This is a DEPLOY stage"
                sh 'sleep 5'
            }
        }

        stage('TESTING1') {
            agent any 
            steps {
                sh 'echo "This is a TESTING1 stage"'
                sh 'sleep 5'
            }
        }

        stage('TESTING2') {
            agent { label 'javaproject1' } 
            steps {
                sh '''
                    echo "This is a TESTING2 stage"
                    sleep 5
                '''
            }
        }
    }
}
